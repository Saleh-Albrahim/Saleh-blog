<%- include('partials/header',header)%>
    <!-- Main Content-->
    <div class="container">
        <form method="POST" action="/add-blog">
            <div class="form-group">
                <label for="blog-title">Blog Title</label>
                <input name="title" type="text" class="form-control w-25" id="blog-title">
            </div>
            <div class="form-group">
                <label for="blog-content">Blog Content</label>
                <textarea name="content" class="form-control" id="blog-content" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="blog-user">Your Name</label>
                <input name="user" type="text" class="form-control w-25" id="blog-user">
            </div>
            <button type="submit" class="btn btn-secondary ">ADD NEW BLOG</button>
        </form>
        <hr />
        <%- include('partials/footer.ejs') %>